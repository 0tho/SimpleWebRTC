/*--------------------------------------------------------------------
*
* Header
*
--------------------------------------------------------------------*/

header
  position: relative
  padding: $spacing-base*3 0 0 0
  background-color: $blue-saturated-dark
  margin-bottom: 300px

  h1
    margin-bottom: $spacing-s
    color: white

  h4
    font-weight: $font-weight-regular
    margin-bottom: $spacing-base
    color: $gray-light

  .container
    position: relative
    z-index: 10

.header-bg
  position: absolute
  width: 100%
  height: 70%
  overflow: hidden
  background: $blue-saturated-dark
  transform: skewY(-6deg)
  transform-origin: 0

.swrtc-logo
  width: 250px
  margin-bottom: $spacing-base

@media screen and (max-width: $breakpoint-mid-mobile)
  header 
    text-align: center