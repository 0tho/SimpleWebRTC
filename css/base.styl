/*!
* Base
*/

@import colors

*, *:after, *:before
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

::-webkit-input-placeholder
  color: $gray-light
  font-weight: 200

:-moz-placeholder
  color: $gray-light
  font-weight: 200

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

html
  font-size: 100%

body
  font-family: 'Gotham Rounded A', 'Gotham Rounded B', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-weight: 400
  font-size: 1em
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  color: $gray-darker
  line-height: 1.5
  background: url(http://andyet.com/images/header.png) top center no-repeat

h1, h2, h3, strong
  font-weight: 700

h1, h2, h3
  color: black

h1
  font-size: 3em

h2
  margin: 1.875em
  font-size: 1.75em
  text-align: center

h3
  margin: 1.25em 0
  font-size: 1.25em

h2, h3
  line-height: 1.2

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:hover 
    color: darken($blue, 20%)

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

ul
  margin: 1.875em 0 1.875em 1.875em
  padding: 0

  li
    list-style-type: disc
    padding: 5px 0

.logo
  font-family: 'Gotham SSm A', 'Gotham SSm B', 'Helvetica Neue', Helvetica, Arial, sans-serif
  text-align: center

  span
    &:first-of-type
      color: $pink
    &:last-of-type
      color: $blue

.content
  margin: 10em auto 0

.button.github-fork
  display: block
  border-radius: 0
  position: absolute
  top: -3.5em
  right: -10em
  padding: 0 6em
  height: 2.5em
  line-height: 2.5em
  -webkit-transform: rotate(45deg)
  transform: rotate(45deg)
  -webkit-transform-origin: top left
  transform-origin: top left
  z-index: 2

  &:hover
    background-color: lighten($blue, 30%)

@media screen and (max-width: 48em)
  .content
    width: 90%

@media screen and (min-width: 48.0625em)
  .content
    width: 55%

pre
  background-color: #333
  color: #fff
  padding: 15px
  font-size: 12px
  margin: 5px 0 40px 0
  border-top: 1px solid #333
  border-bottom: 1px solid #ccc
  line-height: 140%